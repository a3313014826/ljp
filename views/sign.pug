doctype html
html
    head
        meta(charset='utf-8')
        title 注册账号
        link(href='/stylesheets/sign.css', rel='stylesheet', type='text/css')
    body
        .divcss5
            form(action='/sign', method='post')
                h2 注&nbsp;&nbsp;册
                input#userN1(type='text', name='userName', placeholder='用户名', pattern='^[a-zA-Z0-9_-]{4,16}$', oninvalid="setCustomValidity('请输入4~6用户名')")
                input#psd2(type='password', name='passWord', placeholder='密码', pattern='[a-zA-Z0-9_-]{4,16}$', oninvalid="setCustomValidity('请输入6~16位字母+数字组合')")
                input#psd1(type='password', placeholder='确认密码')
                input.subMit(type='submit', value='提交', onclick='check()')
                div
        .wrapper
            .candles
                .light__wave
                .candle1
                    .candle1__body
                        .candle1__eyes
                            span.candle1__eyes-one
                            span.candle1__eyes-two
                        .candle1__mouth
                    .candle1__stick
                .candle2
                    .candle2__body
                        .candle2__eyes
                            .candle2__eyes-one
                            .candle2__eyes-two
                    .candle2__stick
                .candle2__fire
                .sparkles-one
                .sparkles-two
                .candle__smoke-one
                .candle__smoke-two
            .floor
        script(src='/javascripts/sign.js' type='text/javascript').
